<?xml version="1.0" encoding="utf-8"?>

<odoo>
    
    <!-- template pour le fil d'ariane -->
    <template id="portal_my_home_menu_invoice2" name="Portal layout : invoice menu entries" inherit_id="portal.portal_breadcrumbs" priority="30">

        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            
            <t t-foreach="ariane_pages" t-as="page">
                <t t-set= "link" t-value="page['link']" ></t> 

                <li t-attf-class="breadcrumb-item">
                    <a t-attf-href="{{page['link']}}" > <t t-esc="page['title']" /> </a>
                </li>     
           
            </t>
        </xpath>
    </template>


    <!-- template generale -->
    <template id="template">

    <!-- 
      Import du "layout" de base avec le header et le footer
    -->
    <t t-call="portal.portal_layout">
    <!--<t t-call="custom_website.portal_my_home_menu_invoice2"/>-->


      <div class="container d-flex flex-row justify-content-between mt-3">

        <!-- Import du menu -->
        <t t-if="menu" >
          <div class="col-3">
            <t t-call="custom_website.menu"> </t>
          </div>
        </t>  

        <!-- Import de la page profil -->
        <t t-if="page_name=='profile'">
          <div id="profile" class="col-8">
          <t t-call="custom_website.profile"> </t>
          </div>
        </t>


      </div>

      <div id="bg-parallaxe" class="bg-yellow"> </div>

    </t>
    
    </template>




